<!-- Nav Bar Section -->
<%- include('../components/nav-bar-dashboard.ejs') %>

<!----------------SideBarSection---------------------->
<%- include('../components/side-bar-dashboard.ejs') %>

<div id="main">
<div class="container">
    <div class="jumbotron ">
        <div class="card">
            
            <div class="card-header p-3 mb-2 bg-info text-white">Tasks Progress Report</div>
            <div class="card-body">
                <% if(tasks.length<1) { %>
                    <h6  class="nogoals" >
                        Right now you do not have any task. Kindly go to task menu to create tasks</h6>
                <% }else { %>
                <table class="table table-dark table-hover table-bordered table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">task Name</th>
                            <th scope="col">task Progress</th>
                        </tr>
                    </thead>
                <tbody>
                    <% tasks.forEach(function(task){ %>
                    
                        <tr>
                            <td><%= task.taskName %></td>
                            <td> 
                                <h6 class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" 
                                role="progressbar" 
                                aria-valuenow="<%= task.progress %>"
                                    aria-valuemin="0" aria-valuemax="100" 
                                    style="width: <%= task.progress %>%"
                                    >
                                    <%= task.progress %> % 
                                </div>
                                
                            </h6></td>
                        </tr>
                        
                    
                    <% }) %>
                </tbody>
                </table>
                <% } %>
            </div>
        </div>
    </div>
</div>
</div>